            <script>

                const controller = '{{ path('search_task') }}';

                $( "#datepicker" ).datepicker();
        
                $("#datepicker").change(function(){
                    let data = $("#datepicker").val(); 
                    console.log(data);
                    
                    ajax(data, controller);
                });

                function ajax(data, controller){
                    $.ajax({
                        type: "POST",
                        url: controller,
                        contentType: false,
                        cashe: false,
                        processData: false,
                        data: {"data": data},
                        dataType: "json",
                        success: function(data) {
                            $("#successForm").text(data);
                        }
                   });
                }
            </script>
