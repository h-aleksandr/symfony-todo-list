    {% endblock %}

    {% block container %}
            <div class="container">
                <div class="row">

                        <div class="col-lg-9 col-lg-push-3">

                            {% block body %}
                            {% endblock %}

                        </div>

                        <div class="col-lg-3 col-lg-pull-9">

                            {% block panel %}
                            {% endblock %}
                
                            
                        </div>

                    </div>

                </div>
                <script>
                       // const controller = "{{ path('search_task') }}";
                        
                        $( "#datepicker" ).datepicker();
                
                            $('button').click(function(e) {
                                e.preventDefault();
                                    let data = $("#datepicker").val(); 
                                    console.log(data);
                                
                                ajax(data);
                            });

                            function ajax(data){
                                $.ajax({
                                    method: "POST",
                                    url: $(this).attr('action'),
                                    cache: false,
                                    data: {"data": data},
                                    dataType: 'json',
                                    async: true,
                                     error: function(){
                                        alert("something плохо");
                                    },
                                    success: function(data) {
                                        alert("плюс-минус");
                                        $("div#formSuccess").html(data);
                                    }   
                            });
                        }
            </script>
    {% endblock %}

    {% block javascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    {% endblock %}
